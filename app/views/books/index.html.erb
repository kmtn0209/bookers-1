<!DOCTYPE>
<html lang ="ja">
 <head>
     <meta charset = "UTF-8">
     <link rel="stylesheet" href="index.css">
     <title>WebCampBackendNew</title>
 </head>

 <body>
  <header>
    <p>
     <%=  flash[:notice] %>
    </p>
   <h1>Books</h1>
  </header>

  <main>
   <table>
    <thead>
     <tr>
      <th class="header1">Title</th>
      <th class="header2">Body</th>
     </tr>
    </thead>
     <% @books.each do |book| %>
      <tbody>
       <td>
        <span class="title"><%= book.title %></span>
       </td>
       <td>
        <span class="body"><%= book.body %></span>
       </td>
       <td><%= link_to "Show" , book_path(book.id) %></td>
       <td><%= link_to "Edit" , edit_book_path(book.id) %></td>
       <td><%= link_to "Destroy" , destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tbody>
     <% end %>
   </table>

   <h1>
    <strong>New book</strong>
   </h1>

   <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved:
     <ul>
      <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
      <% end %>
     </ul>
   <% end %>


   <%= form_with model: @book, url: 'books', method: :post , local:true do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>

    <p>Body</p>
    <%= f.text_area :body %>
    <br>
    <%= f.submit 'Create Book' %>
   <% end %>
  </main>
  <footer></footer>
  </body>
</html>